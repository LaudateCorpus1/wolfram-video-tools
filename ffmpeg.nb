Cell[BoxData[{
 RowBox[{
  RowBox[{"result", "=", 
   RowBox[{"RunProcess", "[", 
    RowBox[{"{", 
     RowBox[{
     "ffmpeg", ",", "\"\<-list_devices\>\"", ",", "\"\<true\>\"", ",", 
      "\"\<-f\>\"", ",", "\"\<dshow\>\"", ",", "\"\<-i\>\"", ",", 
      "\"\<dummy\>\""}], "}"}], "]"}]}], ";"}], "\n", 
 RowBox[{
  RowBox[{
   RowBox[{"dshow", "=", 
    RowBox[{"Select", "[", 
     RowBox[{
      RowBox[{"ImportString", "[", 
       RowBox[{
        RowBox[{"result", "[", "\"\<StandardError\>\"", "]"}], ",", 
        "\"\<Lines\>\""}], "]"}], ",", 
      RowBox[{
       RowBox[{"StringContainsQ", "[", 
        RowBox[{"#", ",", "\"\<dshow\>\""}], "]"}], "&"}]}], "]"}]}], ";"}], 
  " ", 
  RowBox[{"(*", " ", 
   RowBox[{"look", " ", "for", " ", "dshow", " ", "lines"}], " ", 
   "*)"}]}], "\n", 
 RowBox[{
  RowBox[{
   RowBox[{"dshow", "=", 
    RowBox[{"Select", "[", 
     RowBox[{"dshow", ",", 
      RowBox[{
       RowBox[{"Not", "[", 
        RowBox[{"StringContainsQ", "[", 
         RowBox[{"#", ",", "\"\<DirectShow\>\""}], "]"}], "]"}], "&"}]}], 
     "]"}]}], ";"}], " ", 
  RowBox[{"(*", " ", 
   RowBox[{"remove", " ", "an", " ", "uninteresting", " ", "line"}], " ", 
   "*)"}]}], "\n", 
 RowBox[{
  RowBox[{"dshow", "=", 
   RowBox[{"Select", "[", 
    RowBox[{"dshow", ",", 
     RowBox[{
      RowBox[{"Not", "[", 
       RowBox[{"StringContainsQ", "[", 
        RowBox[{"#", ",", "\"\<Alternative\>\""}], "]"}], "]"}], "&"}]}], 
    "]"}]}], ";", " ", 
  RowBox[{"(*", " ", 
   RowBox[{"remove", " ", "another", " ", "uninteresting", " ", "line"}], " ",
    "*)"}], "\n", 
  RowBox[{"video", "=", 
   RowBox[{
    RowBox[{"Flatten", "[", 
     RowBox[{"Map", "[", 
      RowBox[{
       RowBox[{
        RowBox[{"StringCases", "[", 
         RowBox[{"#", ",", 
          RowBox[{"\"\<\\\"\>\"", "~~", "___", "~~", "\"\<\\\"\>\""}]}], 
         "]"}], "&"}], ",", "dshow"}], "]"}], "]"}], "[", 
    RowBox[{"[", "1", "]"}], "]"}], 
   RowBox[{"(*", " ", 
    RowBox[{
    "this", " ", "assumes", " ", "the", " ", "first", " ", "device", " ", 
     "is", " ", "the", " ", "one", " ", "you", " ", "want"}], 
    "*)"}]}]}]}], "Input",
