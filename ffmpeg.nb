       RowBox[{"delete", " ", "the", " ", "file"}], ",", " ", 
       RowBox[{"if", " ", "it", " ", "exists"}]}], " ", "*)"}], 
     "\[IndentingNewLine]", 
     RowBox[{"RunProcess", "[", "command", "]"}], ";", "\[IndentingNewLine]", 
     "file"}]}], "\[IndentingNewLine]", "]"}]}]], "Input",
